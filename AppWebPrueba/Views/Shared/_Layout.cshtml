@using Microsoft.AspNetCore.Mvc.Rendering
@functions {
    string Active(string controller) =>
        string.Equals(controller, ViewContext.RouteData.Values["controller"]?.ToString(), StringComparison.OrdinalIgnoreCase)
            ? "active" : "";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AppWebPrueba</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Site -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AppWebPrueba.styles.css" asp-append-version="true" />

    <style>
        body.login-bg {
            background-color: #f5f7fb;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .card-soft {
            border: 0;
            border-radius: 16px;
            box-shadow: 0 8px 24px rgba(0,0,0,0.08);
        }
    </style>
</head>
<body class="@(User?.Identity?.IsAuthenticated == true ? "" : "login-bg")">
    @if (User?.Identity?.IsAuthenticated == true)
    {
        <!-- NAV autenticado -->
        <header>
            <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
                <div class="container-fluid">
                    <a class="navbar-brand fw-semibold" asp-controller="Home" asp-action="Index">AppWebPrueba</a>

                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
                            aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="mainNav">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link @Active("Departamentos")" asp-controller="Departamentos" asp-action="Index">Departamentos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @Active("Empleados")" asp-controller="Empleados" asp-action="Index">Empleados</a>
                            </li>

                            @if (User.IsInRole("Administrador"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link @Active("Usuarios")" asp-controller="Usuarios" asp-action="Index">Usuarios</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link @Active("Reportes")" asp-controller="Reportes" asp-action="Kpis">Reportes</a>
                                </li>
                            }
                        </ul>

                        <div class="d-flex align-items-center gap-2">
                            <span class="text-muted small d-none d-md-inline">Hola, @User.Identity?.Name</span>
                            <form asp-controller="Auth" asp-action="Logout" method="post" class="m-0">
                                @Html.AntiForgeryToken()
                                <button class="btn btn-outline-danger btn-sm" type="submit">Salir</button>
                            </form>
                        </div>
                    </div>
                </div>
            </nav>
        </header>

        <div class="container py-4">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <footer class="border-top text-muted py-3">
            <div class="container small">
                &copy; @DateTime.Now.Year - AppWebPrueba
            </div>
        </footer>
    }
    else
    {
        <!-- Vista no autenticada (login temático) -->
        <main class="container" role="main" style="max-width: 480px;">
            <div class="card card-soft p-4 bg-white w-100">
                @RenderBody()
            </div>
        </main>
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

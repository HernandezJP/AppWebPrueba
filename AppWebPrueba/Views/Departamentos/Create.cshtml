@model AppWebPrueba.Models.DepartamentoCreate
@{
    ViewData["Title"] = "Nuevo departamento";
}
<h3>Nuevo departamento</h3>

<form asp-action="Create" method="post" class="card card-body shadow-sm">
    @Html.AntiForgeryToken()
    <div class="mb-3">
        <label class="form-label">ID Departamento</label>
        <input class="form-control" asp-for="IdDepartamento" type="number" min="1" />
        <span class="text-danger" asp-validation-for="IdDepartamento"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Nombre</label>
        <input class="form-control" asp-for="NombreDepto" />
        <span class="text-danger" asp-validation-for="NombreDepto"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Presupuesto</label>
        <input class="form-control" asp-for="Presupuesto" />
        <span class="text-danger" asp-validation-for="Presupuesto"></span>
    </div>
    <div class="d-flex gap-2">
        <button class="btn btn-primary">Guardar</button>
        <a class="btn btn-secondary" asp-action="Index">Volver</a>
    </div>
</form>

@model AppWebPrueba.Models.DepartamentoUpdate
@{
    ViewData["Title"] = "Editar departamento";
}
<h3>Editar departamento</h3>

<form asp-action="Update" method="post" class="card card-body shadow-sm">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="IdDepartamento" />
    <div class="mb-3">
        <label class="form-label">Nombre</label>
        <input class="form-control" asp-for="NombreDepto" />
        <span class="text-danger" asp-validation-for="NombreDepto"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Presupuesto</label>
        <input class="form-control" asp-for="Presupuesto" />
        <span class="text-danger" asp-validation-for="Presupuesto"></span>
    </div>
    <div class="d-flex gap-2">
        <button class="btn btn-primary">Guardar</button>
        <a class="btn btn-secondary" asp-action="Index">Volver</a>
    </div>
</form>

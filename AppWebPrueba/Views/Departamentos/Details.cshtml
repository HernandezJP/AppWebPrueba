@model AppWebPrueba.Models.DepartamentoUpdate
@{
    ViewData["Title"] = "Detalle departamento";
}
<h3>Detalle</h3>

<div class="card card-body shadow-sm">
    <dl class="row mb-0">
        <dt class="col-sm-3">Id</dt>
        <dd class="col-sm-9">@Model.IdDepartamento</dd>
        <dt class="col-sm-3">Nombre</dt>
        <dd class="col-sm-9">@Model.NombreDepto</dd>
        <dt class="col-sm-3">Presupuesto</dt>
        <dd class="col-sm-9">@Model.Presupuesto.ToString("Q #,##0.00")</dd>
    </dl>
</div>

<div class="mt-3">
    <a class="btn btn-secondary" asp-action="Index">Volver</a>
    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.IdDepartamento">Editar</a>
</div>

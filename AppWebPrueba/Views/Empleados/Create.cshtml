@model AppWebPrueba.Models.EmpleadoCreate
@{
    ViewData["Title"] = "Nuevo empleado";
}

<h3 class="mb-3">Nuevo empleado</h3>

<form asp-action="Create" method="post" class="card card-body shadow-sm">
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-md-6 mb-3">
            <label class="form-label">Nombre</label>
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label class="form-label">Apellidos</label>
            <input asp-for="Apellidos" class="form-control" />
            <span asp-validation-for="Apellidos" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label class="form-label">Documento (CUI)</label>
            <input asp-for="DocumentoCui" class="form-control" />
            <span asp-validation-for="DocumentoCui" class="text-danger"></span>
        </div>
        <div class="col-md-3 mb-3">
            <label class="form-label">Fecha ingreso</label>
            <input asp-for="FechaIngreso" class="form-control" type="date" />
            <span asp-validation-for="FechaIngreso" class="text-danger"></span>
        </div>
        <div class="col-md-3 mb-3">
            <label class="form-label">Salario actual</label>
            <input asp-for="SalarioActual" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="SalarioActual" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 mb-3">
            <label class="form-label">Fecha último aumento</label>
            <input asp-for="FechaUltimoAumento" class="form-control" type="date" />
            <span asp-validation-for="FechaUltimoAumento" class="text-danger"></span>
        </div>
        <div class="col-md-4 mb-3">
            <label class="form-label">Fecha baja</label>
            <input asp-for="FechaBaja" class="form-control" type="date" />
            <span asp-validation-for="FechaBaja" class="text-danger"></span>
        </div>
        <div class="col-md-4 mb-3">
            <label class="form-label">Departamento</label>
            <select asp-for="DepartamentoId" asp-items="ViewBag.Departamentos" class="form-select"></select>
            <span asp-validation-for="DepartamentoId" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label class="form-label">Puesto</label>
            <input asp-for="Puesto" class="form-control" />
            <span asp-validation-for="Puesto" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label class="form-label">Jerarquía</label>
            <input asp-for="Jerarquia" class="form-control" />
            <span asp-validation-for="Jerarquia" class="text-danger"></span>
        </div>
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary">Guardar</button>
        <a asp-action="Index" class="btn btn-secondary">Volver</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
